$(document).ready(function(){
    getWorldArticles();
    fetchWorldArticlesButton()
});

function fetchWorldArticlesButton() {
    $("#fetch-world-articles").on("click", function() {
        getWorldArticles()
    })
}

function getWorldArticles() {
    $.ajax({
        type: "GET",
        url: "http://api.nytimes.com/svc/topstories/v1/world.json?api-key=<%= ENV["nytimes_top_stories_api_key"]  %>",
        success: function(articles){
            var stories = articles.results;
            $.each(stories, function(index, story){
                var newArticleDate        = story.created_date;
                var lastArticleDate = $("#top-stories-world-articles").last().data("created-date");

                if (lastArticleDate === undefined || lastArticleDate > newArticleDate) {
                    renderWorldStory(story)
                }
            })
        }
    })
}

function renderWorldStory(story) {
    $("#top-stories-world-articles").append(
            "<div class='top-stories-world-articles'>"
            +"<div class='row'>"
            +"<div class='medium-12 columns top-stories-world-title'>"
            +"<h4>"+story.title+"</h4>"
            +"<h6>"+story.created_date+"</h6>"
            +"</div>"
            +"</div>"
            +"<div class='row'>"
            +"<div class='medium-6 columns top-stories-world-byline'>"
            +"<p>"+story.byline+"</p>"
            +"</div>"
            +"<div class='medium-6 columns top-stories-world-section'>"
            +"<p>"+story.section+"</p>"
            +"</div>"
            +"</div>"
            +"<div class='row'>"
            +"<div class='medium-12 columns top-stories-world-abstract'>"
            +"<p>"+story.abstract+"</p>"
            +"</div>"
            +"</div>"
            +"<div class='row'>"
            +"<div>"
            +"<a class='button' href='"+story.url+"'>Read More</a>"
            +"</div>"
            +"<div>"
            +"<img src=https://maps.googleapis.com/maps/api/staticmap?center="
            +story.geo_facet
            +"&zoom=4&size=300x300&maptype=roadmap&markers=size:mid%7Ccolor:0xff0000%7Clabel:1%7C"
            +story.geo_facet
            +"&key=<%= ENV['google_static_maps_api_key'] %>"
            +">"
            +"<hr>"
            +"</div>"
    );
}