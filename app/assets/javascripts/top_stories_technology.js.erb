$(document).ready(function(){
    getTechnologyArticles();
    fetchTechnologyArticlesButton()
});

function fetchTechnologyArticlesButton() {
    $("#fetch-technology-articles").on("click", function() {
        getNewswireArticles()
    })
}

function getTechnologyArticles() {
    $.ajax({
        type: "GET",
        url: "http://api.nytimes.com/svc/topstories/v1/technology.json?api-key=<%= ENV["nytimes_top_stories_api_key"]  %>",
        success: function(articles){
            var stories = articles.results;
            $.each(stories, function(index, story){
                var newArticleDate        = new Date(story.created_date);
                var lastArticleDate = $(".story").last().attr("created_date");

                if (lastArticleDate === undefined || lastArticleDate > newArticleDate) {
                    renderTechnologyStory(story)
                }
            })
        }
    })
}

function renderTechnologyStory(story) {
    $("#top-stories-technology-articles").append(
            "<div class='top-stories-technology-articles'>"
            +"<div class='row'>"
            +"<div class='medium-12 columns top-stories-technology-title'>"
            +"<h4>"+story.title+"</h4>"
            +"<h6>"+new Date(story.created_date)+"</h6>"
            +"</div>"
            +"</div>"
            +"<div class='row'>"
            +"<div class='medium-6 columns top-stories-technology-byline'>"
            +"<p>"+story.byline+"</p>"
            +"</div>"
            +"<div class='medium-6 columns top-stories-technology-section'>"
            +"<p>"+story.section+"</p>"
            +"</div>"
            +"</div>"
            +"<div class='row'>"
            +"<div class='medium-12 columns top-stories-technology-abstract'>"
            +"<p>"+story.abstract+"</p>"
            +"</div>"
            +"</div>"
            +"<div class='row'>"
            +"<div>"
            +"<a class='button' href='"+story.url+"'>Read More</a>"
            +"</div>"
            +"<hr>"
            +"</div>"
    );
}