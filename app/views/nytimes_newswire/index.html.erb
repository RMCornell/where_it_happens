<div class="medium-7 medium-centered columns">
<h1>NewsWire</h1>
<% @articles.each do |article| %>
    <h3 class="headline"><a href="#" data-reveal-id="a-<%= article[:title].parameterize %>"><%= article[:title] %></a></h3>
    <% if article[:thumbnail_standard] != "" %>
        <%= image_tag article[:thumbnail_standard], class: "thumbnail_image" %>
    <% else %>
        <%= image_tag "busy-people-background.jpg", class: "thumbnail_image" %>
    <% end %>


    <p><%#= article %></p>

    <div id="a-<%= article[:title].parameterize %>" class="reveal-modal" data-reveal aria-labelledby="modalTitle" aria-hidden="true" role="dialog">
      <h3 id="modalTitle"><%= article[:title] %></h3>
      <p><%= article[:byline] %></p>


      <% if article[:multimedia].class != String %>
        <%= image_tag article[:multimedia].last[:url], class: "story_image"  %>
          <p><%#= article[:multimedia].last[:caption] %></p>
      <% else %>
        <%= image_tag "busy-people-background.jpg", class: "story_image" %>
      <% end %>
      <% if article[:geo_facet] != "" %>
        <%= image_tag("https://maps.googleapis.com/maps/api/staticmap?center=#{article[:geo_facet]}&zoom=4&size=300x300&maptype=roadmap&markers=size:mid%7Ccolor:0xff0000%7Clabel:1%7C#{article[:geo_facet]}&key=#{ENV['google_static_maps_api_key']}", class: "map_image") %>
      <% else %>
        <%= image_tag("https://maps.googleapis.com/maps/api/staticmap?center=unitedstates&zoom=1&size=300x300&maptype=hybrid&key=#{ENV['google_static_maps_api_key']}", class: "map_image") %>
      <% end %>

      <p class="lead"><%= article[:abstract] %></p>
      <p><%= link_to "View Full Article", article[:url] %></p>
      <a class="close-reveal-modal" aria-label="Close">&#215;</a>
    </div>
<% end %>
</div>
