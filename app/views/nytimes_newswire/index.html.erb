<h1>NYTimes NewsWire</h1>
<% @articles.each do |article| %>
    <ul>
        <li><%= article[:title] %></li>
        <li><%= article[:byline] %></li>
        <li><%= article[:abstract] %></li>
        <li><%= link_to "View full article", article[:url]  %></li>
        <li><%= article[:geo_facet] %></li>
        <li><%= image_tag article[:thumbnail_standard] %></li>

        <li><%= article %></li>
    </ul>
<% end %>
